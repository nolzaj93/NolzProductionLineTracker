<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nolz3003.Controller">

  <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
    xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Tab text="Product Line">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <GridPane layoutX="7.0" prefHeight="102.0" prefWidth="378.0">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="10.0"
              prefWidth="268.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="490.0" minWidth="10.0"
              prefWidth="270.0"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints maxHeight="71.0" minHeight="10.0" prefHeight="62.0"
              vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="102.0" minHeight="10.0" prefHeight="69.0"
              vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="104.0" minHeight="0.0" prefHeight="56.0"
              vgrow="SOMETIMES"/>
          </rowConstraints>
          <Label text="Product Name"/>
          <TextField fx:id="productNameField" GridPane.columnIndex="1"/>
          <TextField fx:id="manufacturerField" prefHeight="27.0" prefWidth="305.0"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>
          <Label text="Manufacturer" GridPane.rowIndex="1"/>
          <Label prefHeight="22.0" prefWidth="84.0" text="Item Type" GridPane.rowIndex="2"/>
          <ComboBox fx:id="itemTypeCombo" prefHeight="27.0" prefWidth="191.0"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
        <Label layoutX="7.0" layoutY="124.0" text="Existing Products"/>
        <TableView fx:id="existingProductsTable" layoutX="142.0" layoutY="124.0"
          prefHeight="233.0" prefWidth="442.0">
          <columns>
            <TableColumn fx:id="productNameColumn" prefWidth="121.0" text="Product Name">
              <cellValueFactory>
                <PropertyValueFactory property="productName"/>
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="manufacturerColumn" prefWidth="188.0" text="Manufacturer">
              <cellValueFactory>
                <PropertyValueFactory property="manufacturer"/>
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="itemTypeColumn" prefWidth="155.0" text="Item Type">
              <cellValueFactory>
                <PropertyValueFactory property="itemType"/>
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableView>
        <Button layoutX="416.0" layoutY="74.0" mnemonicParsing="false" onAction="#addNewProduct"
          prefHeight="28.0" prefWidth="167.0" text="Add Product"/>
      </AnchorPane>
    </Tab>
    <Tab text="Produce">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <Label layoutX="124.0" layoutY="14.0" text="Choose Product"/>
        <ListView layoutX="27.0" layoutY="38.0" prefHeight="291.0" prefWidth="292.0"/>
        <Label layoutX="364.0" layoutY="14.0" text="Choose Quantity"/>
        <ComboBox fx:id="quantity" layoutX="363.0" layoutY="38.0" prefWidth="150.0"/>
        <Button layoutX="363.0" layoutY="157.0" mnemonicParsing="false" prefHeight="53.0"
          prefWidth="176.0" text="Record Production"/>
      </AnchorPane>
    </Tab>
    <Tab text="Production Log">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <TextArea layoutX="14.0" layoutY="13.0" prefHeight="341.0" prefWidth="571.0"/>
      </AnchorPane>
    </Tab>
  </TabPane>

</AnchorPane>
